<li data-id="{{ id }}" class="transaction list-group-item row">
  <div class="col-xs-1">
    <button class="btn btn-link btn-xs transaction-remove">
      <span class="glyphicon glyphicon-remove text-danger"></span>
    </button>
  </div>
  <div class="col-xs-2">
    <span data-key="category" contenteditable="true" class="label label-primary transaction-category">{{ category }}</span>
  </div>
  <div class="col-xs-5">
    <span data-key="date" contenteditable="true" class="transaction-date">{{ parseDate date }}</span>
    <span> - </span>
    <span data-key="description" contenteditable="true" class="transaction-description">{{ description }}</span>
  </div>
  <div class="col-xs-4 text-right">
    <strong data-key="amount" contenteditable="true" class="transaction-amount">{{ money amount }}</strong>
  </div>
</li>