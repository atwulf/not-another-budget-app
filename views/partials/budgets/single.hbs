<li data-id="{{ id }}" class="budget list-group-item row">
  <div class="col-xs-5">
    <span data-key="category" contenteditable="true">
      {{ category }}
    </span>
  </div>
  <div class="col-xs-3">
    <span data-key="amount" contenteditable="true">
      {{ money amount }}
    </span>
  </div>
  <div class="col-xs-2 text-right">
    <strong>({{ money totalSpent }})</strong>
  </div>
  <div class="col-xs-2 text-right">
    <strong class="budget-total label {{labelClass}}">
      {{ money remainder }}
    </strong>
  </div>
</li>